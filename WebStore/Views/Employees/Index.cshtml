@model IEnumerable<WebStore.Models.Employee>

@{
    ViewData["Title"] = "Список сотрудников";
}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Age</td>
                    <td>
                        <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">Инфо.</a>
                        <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">Редакт.</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Home" asp-action="Index">На главную</a>
</div>