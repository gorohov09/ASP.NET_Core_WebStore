@model IEnumerable<ProductViewModel>

@{
    ViewBag.Title = "Каталог товаров";
}

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(m => m.Id)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Section)</th>
            <th>@Html.DisplayNameFor(m => m.Brand)</th>
            <th>@Html.DisplayNameFor(m => m.ImageUrl)</th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Products" asp-action="Edit" asp-route-Id="@product.Id">Редактирование</a>
                </td>
                <td>@Html.DisplayFor(_ => product.Id)</td>
                <td>@Html.DisplayFor(_ => product.Name)</td>
                <td>@Html.DisplayFor(_ => product.Section)</td>
                <td>@Html.DisplayFor(_ => product.Brand)</td>
                <td>
                    <img src="~/images/shop/@product.ImageUrl" width="50" alt="@product.Name">
                </td>
                <td>@Html.DisplayFor(_ => product.Price)</td>
                <td>
                    <a asp-controller="Products" asp-action="Delete" asp-route-Id="@product.Id">Удаление</a>
                </td>
            </tr>
        }
    </tbody>
</table>